@model ShoeShelf.Models.Disinfection

@{
    ViewData["Title"] = "Edit Disinfection";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ShoeId" class="control-label"></label>
                <select asp-for="ShoeId" class="form-control" asp-items="ViewBag.ShoeID">
                    <option value="">-- Select Shoes --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DisinfectionDate" class="control-label"></label>
                <input asp-for="DisinfectionDate" class="form-control" />
                <span asp-validation-for="DisinfectionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
